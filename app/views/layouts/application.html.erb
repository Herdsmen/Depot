<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <title>Depot</title>
<!-- START_HIGHLIGHT -->
  <%= stylesheet_link_tag :all %><!--<label id="code.slt"/> -->
<!-- END_HIGHLIGHT -->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %><!--<label id="code.csrf"/> -->
</head>
<!-- END:head -->
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png") %>
		<%= @page_title || "Pragmatic Bookshell" %><!-- <label id="code.depot.e.title" /> -->
	</div>
	<div id="columns">
		<div id="side">
			<%if @cart%>
			<%=hidden_div_if(@cart.line_items.empty?,:id=>"cart") do %>
			<%=render @cart %>
			<%end%>
			<%end%>

			<a href="http://www....">Home</a><br />
			<a href="http://www..../faq">Questions</a><br />
			<a href="http://www..../news">News</a><br />
			<a href="http://www..../contact">Contact</a><br />
			
			<% if session[:user_id]%>
			<br />
			<%= link_to 'Order', orders_path%><br />
			<%= link_to 'Product', products_path%><br />
			<%= link_to 'User', users_path%><br />
			<br />
			<%= button_to 'Logout', logout_path, :method=>:delete%>
			<%end%>
		</div>
		<div id="main">
			<%= yield %><!-- <label id="code.depot.e.include" /> -->
		</div>
	</div>
</body>
</html>
