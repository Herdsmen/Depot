<body id="store">
<div id="wrap">

	<div class="header">
       		<div class="logo">
				<%= link_to image_tag("logo.gif"), store_index_path %>
			</div>            
        <div id="menu">
            <ul>                                                                       
				<li class="selected">
					<%= link_to "home", store_index_url %>
				</li>
				<li><%= link_to "books", books_path %></li>
				<li>
					<%= link_to "about us", about_us_path %>
				</li>
				<li>
					<%= link_to "contact us", contact_us_path %>
				</li>
				<li><%= link_to "help", aid_path %></a></li>
				<% if !session[:user_id]%>
					<li><%= link_to "my amount", login_url %></li>
					<li><%= link_to "register", new_customer_path%></li>
				<% elsif session[:type] == "Customer" %>
					<li><%=link_to User.find_by_id(session[:user_id]).name, 
							{ :controller => "customers", :action => "show", :id => session[:user_id] } %></li>
					<li><%= link_to "logout", logout_path, :method => :delete %></li>
				<% else %>
					<li><%= link_to User.find_by_id(session[:user_id]).name, admin_url %></li>
					<li><%= link_to "logout", logout_path, :method => :delete %></li>
				<% end %>
				
				<li>

				</li>
            </ul>

        </div>     
		<%= form_for :search, :url => search_products_path, :html => { :method => :get, :class => "search_form" } do |f| %>
			<%= f.label :title_contains, "Title: " %>
			<%= f.search_field :title_contains %>
			<%= f.submit "Search" %>
		<% end %>
            
	</div> 
       
       
	<div class="center_content">
       	<div class="left_content">
        	<%= yield %>
        </div><!--end of left content-->
        
        <div class="right_content">
        	<div class="languages_box">
				<span class="red">Languages:</span>
				<%= link_to image_tag("gb.gif"), "#" %>
				<%= link_to image_tag("cn.gif"), "#" %>
			<!--
			<a href="http://www.csscss.org" class="selected"><img src="images/gb.gif" alt="" title="" border="0" /></a>
            <a href="http://www.csscss.org"><img src="images/fr.gif" alt="" title="" border="0" /></a>
            <a href="http://www.csscss.org"><img src="images/de.gif" alt="" title="" border="0" /></a>
			-->
            </div>
           
			<div class="currency">
                <span class="red">Currency: </span>
                <a href="#">GBP</a>
                <a href="#">EUR</a>
                <a href="#" class="selected">USD</a>
            </div>
                
                
			<div class="cart">
				<div class="title">
					<span class="title_icon">
						<%= image_tag("cart.gif") %>
					</span>My cart
				</div>
				<div class="clear"></div>
				<div class="home_cart_content">
				<% if @cart %>
					<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
						<%= render @cart %>
					<%end%>
				<% end %>
				</div>
                  
				<a href="cart.html" class="view_cart">view cart</a>
			</div>
                       
            	
        
        
			<div class="title">
				<span class="title_icon">
					<%= image_tag("bullet3.gif") %>
				</span>
				About Our Store
			</div> 
				
			<div class="about">
				<p>
					<%= image_tag("about.gif", :class => "right") %>
						<%= truncate(strip_tags("Book store...a place where builders can build. We hire the world&acute;s bright minds and offer them an environment in which they can invent and innovate to improve the experience for our customers."), :length => 300) %>
				</p>
			</div>
             
			<div class="right_box">
             
				<div class="title">
					<span class="title_icon">
						<%= image_tag("bullet4.gif") %>
					</span>
					Ranking List
				</div> 
				
				<% rank = 1 %>
				<% Product.get_top_five.each do |product| %>
				<!--
					<a href="#" onclick="return hs.htmlExpand(this, { contentId: 'highslide-html-<%= "#{rank}" %>', width: 470 } )"
						class="highslide"   onmouseover="return this.onclick()" >-->
					<a href="#" onclick="return hs.htmlExpand(this, { contentId: 'highslide-html-<%= "#{rank}" %>', width: 470 } )" class="highslide" >
						<div class="new_prod_box rank_box">
							<span class="rank_size"><%= "#{ rank }." %></span><%= truncate product.title, :length => 20 %>
							<div class="new_prod_bg">
								<%= image_tag product.image_url, :class => "thumb", :style => "border: 0px;" %>
							</div> 
						</div>
					</a>
					<div class="highslide-html-content" id="highslide-html-<%= "#{rank}" %>">
						<div class="highslide-header">
							<ul>
								<li class="highslide-move">
									<a href="#" onclick="return false">Move</a>
								</li>
								<li class="highslide-close">
									<a href="#" onclick="return hs.close(this)">Close</a>
								</li>
							</ul>
						</div>
						<div class="highslide-body">
							<div class="feat_prod_box">
								<div class="prod_img">
									<%= link_to image_tag(product.image_url, :width => 98), product, :id => product.id %>
									<br />
									<div class="price">
										<strong>Price:</strong>
										<span class="red"><%= number_to_currency product.price %></span>
										<br />
										<strong>Heat:</strong>
										<span class="red">
											<%= product.heat%>
											<%= periodically_call_remote(:update => { :success => product.id }, 
																	:url => { :action => "get_heat", :product_id => product.id }, 
																	:frequency => 30) %>
										</span>
									</div>
									<% addButtonTo product, :addToCartButton %>
									<%= addButtonTo product, :collectButton %>
								</div>
								
								<div class="prod_det_box">
									<div class="box_top"></div>
									<div class="box_center">
									<div class="prod_title">
										<%= link_to product.title, product, :id => product.id %>
									</div>
									<p class="details">
										<%= truncate(strip_tags(product.description), :length => 300) %>
									</p>
										<%= link_to "- more details -", product, :class => "more" %>
									<div class="clear"></div>
									</div>
									
									<div class="box_bottom"></div>
								</div>    
								<div class="clear"></div>
							</div>	
						</div>
						<div class="highslide-footer">
							<div>
								<span class="highslide-resize" title="Resize">
									<span></span>
								</span>
							</div>
						</div>
					</div>
				<% rank += 1%>
				<% end %>
			</div>
             
             <div class="right_box">
             
             	<div class="title">
					<span class="title_icon">
						<%= image_tag("bullet5.gif") %>
					</span>
					Categories
				</div> 
                <%= sideCategoriesDisplay Category.tree %>
				<!-- 
                <ul class="list">
                <li><a href="http://www.csscss.org">accesories</a></li>
                <li><a href="http://www.csscss.org">books gifts</a></li>
                <li><a href="http://www.csscss.org">specials</a></li>
