<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
<!-- START_HIGHLIGHT -->
  <%= stylesheet_link_tag :all%>
<!-- END_HIGHLIGHT -->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<!-- END:head -->
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png") %>
		<%= @page_title || t(".title") %>
		<%= form_tag store_path, :class => 'locale' do%>

		  <%= select_tag 'set_locale',
		  options_for_select(LANGUAGES,I18n.locale.to_s),
		  :onchange => "this.form.submit()"%>
	   	  <%= submit_tag "submit"%>
		  <%= javascript_tag "$$('.locale input').each(Element.hide)"%>
	    <% end %>
		<div class="loginarea">
		<!--login:begin-->
		<% if !session[:user_id]%>
		<%=link_to 'login',login_url %>
		<%= link_to 'Register',new_customer_path%>
		<%elsif session[:type]=='Customer'%>
		<span><%=link_to User.find_by_id(session[:user_id]).name,customers_path%></span>
		<%= link_to 'Logout', logout_path, :method=>:delete %>
		<% else %>
		<span><%=link_to User.find_by_id(session[:user_id]).name,admin_url%></span>
		<%= link_to 'Logout', logout_path, :method=>:delete %>
		<%end%>
		<!--login:end-->
		</div>
	</div>
	<div id="columns">
		<div id="side">
			<% if @cart %>
				<%=hidden_div_if(@cart.line_items.empty?,:id=>"cart") do %>
					<%=render @cart %>
				<%end%>
			<% end %>

			<a href="/"><%= t(".home")%></a><br />
			<a href="/"><%= t(".questions")%></a><br />
			<a href="/"><%= t(".news")%></a><br />
			<a href="/"><%= t(".contact")%></a><br />

			
			<% unless session[:user_id] %>
			<div class="side_categories">
				<%= sideCategoriesDisplay Category.tree %>
			</div>
			<% end %>
			
			<% if session[:user_id]&&session[:type]=='User'%>
			<br />
			<%= link_to 'Orders', orders_path%><br />
			<%= link_to 'Products', products_path%><br />
			<%= link_to 'Users', users_path%><br />
			<br />
			<%end%>
			
			<% if session[:user_id]&&session[:type]=='Customer'%>
			<br />
			<%= link_to 'Orders', :controller=> 'customers',:action=> 'show_orders'%><br />
			<%= link_to 'Collection', customers_path%><br />
			<%= link_to 'Comments', :controller=> 'customers',:action=> 'show_comments'%><br />
			<%= link_to 'Account', :controller=> 'customers',:action=> 'show'%><br />
			<br />
			<%end%>

		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
