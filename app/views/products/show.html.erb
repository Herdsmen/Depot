<% if notice %>
	<p id="notice">
		<%= notice %>
	</p>
<% end %>

<p>
  <b>Title:</b>
  <%= @product.title %>
</p>

<p>
  <b>Description:</b>
  <%= sanitize @product.description %>
</p>

<p>
  <b>Image url:</b>
  <%= image_tag(@product.image_url, :class => "list_image") %>
</p>

<p>
	<b>Price:</b>
	<%= @product.price %>
</p>
<p>
	<b>Categories:</b>
	<!--
	<% @product.getCategories.each do | category | %>
		<span class="product_categories"><%= category.name %>&sbquo;</span>
	<% end %>
	-->
	<span class="product_categories">
		<%= categoriesToString @product %>
	</span>
</p>


<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
